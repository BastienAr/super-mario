{
  "name": "super-mario",
  "description": "Nodejs stream utility",
  "license": "MIT",
  "author": "Bastien <bastyen.a@gmail.com>",
  "repository": "https://github.com/BastienAr/super-mario.git",
  "version": "0.0.0",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "run-s build:js",
    "build:flow": "flow gen-flow-files src/main --out-dir lib/",
    "build:js": "babel src/main -d lib/",
    "clean": "rm -rf coverage .nyc_output yarn-error.log test-result.cml lint-result.xml",
    "precommit": "lint-staged",
    "coverage": "nyc check-coverage --lines 100 --functions 100 --branches 100 && nyc report --reporter=cobertura",
    "flow": "flow status",
    "lint": "eslint -f checkstyle -o lint-result.xml src/main/**/*.js",
    "nyc-report": "nyc report",
    "prepublish": "yarn run flow && yarn run build",
    "test": "cross-env NODE_ENV=test nyc mocha --require babel-register --recursive ./src/test",
    "watch": "babel-watch src/main/index.js"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-plugin-istanbul": "4.1.6",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "babel-watch": "2.0.7",
    "chai": "4.1.2",
    "chance": "1.0.16",
    "cross-env": "5.1.5",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-import-resolver-babel-module": "4.0.0",
    "eslint-plugin-flowtype": "2.48.0",
    "eslint-plugin-import": "2.11.0",
    "event-to-promise": "0.8.0",
    "flow-bin": "0.72.0",
    "husky": "0.14.3",
    "lint-staged": "7.1.0",
    "lodash": "4.17.10",
    "mocha": "5.1.1",
    "npm-run-all": "4.1.3",
    "nyc": "11.7.3",
    "prettier": "1.12.1",
    "prettier-package-json": "1.6.0",
    "sinon": "5.1.0",
    "stream-mock": "1.2.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "include": [
      "src/main/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "report-dir": "coverage"
  }
}
